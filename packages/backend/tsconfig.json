{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "extends": "../../node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": ["@adonisjs/core", "@adonisjs/repl", "@adonisjs/lucid", "@adonisjs/auth"]
  }
}
